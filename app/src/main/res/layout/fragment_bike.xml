<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.biketrack.android.fragments.BikeFragment"
    android:background="@color/background">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/interact_background"
            app:theme="@style/AppTheme"
            app:titleTextColor="@color/background"
            app:title="@string/title_bike"
            app:popupTheme="@style/Theme.AppCompat"/>


        <LinearLayout
            android:id="@+id/linearbike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/toolbar" >

            <ImageView
                android:id="@+id/bike_picture"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:src="@drawable/ic_logo_black"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/battery"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:src="@drawable/ic_battery_full" />

            <TextView
                android:id="@+id/bike_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/interact_background"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/date_last_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearbike" />

</RelativeLayout>
