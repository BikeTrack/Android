<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eu.biketrack.android.fragments.EditProfileFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_email_txt"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textColor="@color/titles"/>

        <EditText
            android:id="@+id/profile_email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/interact_background"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_lastname_txt"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textColor="@color/titles"/>

        <EditText
            android:id="@+id/profile_lastname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/interact_background"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_firstname_txt"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textColor="@color/titles"/>

        <EditText
            android:id="@+id/profile_firstname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/interact_background"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/save_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_account_button_txt"
            android:background="@color/interact_background"
            android:textColor="@color/inside"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_account_button_txt"
            android:background="@color/interact_background"
            android:textColor="@color/inside"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
