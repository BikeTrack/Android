<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="eu.biketrack.android.settings.settings_tab.LanguageFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/interact_background"
            app:titleTextColor="@color/background"
            app:title="@string/title_language"
            app:theme="@style/AppTheme"
            app:popupTheme="@style/Theme.AppCompat"/>

        <ListView
            android:id="@+id/listView_languages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_language_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_language_clear_txt"
        android:background="@color/interact_background"
        android:textColor="@color/inside"
        android:layout_gravity="bottom"/>


</FrameLayout>
