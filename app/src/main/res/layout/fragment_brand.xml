<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eu.biketrack.android.fragments.BrandFragment"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/interact_background"
        app:theme="@style/AppTheme"
        app:popupTheme="@style/Theme.AppCompat"/>
    <EditText
        android:id="@+id/search_bar_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/interact_background"
        android:inputType="text"
        android:background="@color/background"/>

    <ListView
        android:id="@+id/listView_brands"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" />
</LinearLayout>
